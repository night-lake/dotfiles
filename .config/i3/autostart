# feh: wallpaper
exec_always --no-startup-id feh --bg-fill $HOME/.dotfiles/wallpapers/foggy_peaks.png --no-fehbg 

# picom: compositor
exec_always --no-startup-id picom -cbf --config ~/.config/picom/picom.conf

# polybar: bar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# dunst: notif service
exec_always --no-startup-id /usr/bin/dunst

# greenclip: clipboard daemon
exec --no-startup-id greenclip daemon > dev/null

# flameshot: screenshot daemon
exec --no-startup-id flameshot &

# xdg autostart ($XDG_CONFIG_HOME/autostart)
exec --no-startup-id dex --autostart --environment i3

# nm-applet: network systray
exec --no-startup-id nm-applet

# xsslock: screen locking
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# dbus: secret service
exec --no-startup-id dbus-update-activation-environment --all