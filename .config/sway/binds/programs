# rofi: drun/window/calc
bindsym $mod+space exec rofi -show drun -run-command "i3-msg exec '{cmd}'"

# rofi: emoji
bindsym $mod+f exec rofi -show emoji

# rofi: clipboard
bindsym $mod+v exec rofi -modi "clipboard:greenclip print" -show clipboard -run-command "i3-msg exec '{cmd}'"

# kitty
bindsym $mod+Return exec alacritty

# file manager
bindsym $mod+e exec thunar

# manual capture (click and drag)
bindsym $mod+Shift+Print exec --no-startup-id flameshot gui

# capture full screen
bindsym Shift+Print exec --no-startup-id flameshot screen

# notif center
bindsym $mod+w exec --no-startup-id swaync-client -t -sw